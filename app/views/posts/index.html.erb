<div class="main-layout">
  <!-- 🔹 左カラム：サイドバー -->
  <aside class="sidebar">
    <div class="sidebar-section">
      <h3>作り方ガイド</h3>
      <ul class="vegetable-list">
        <% @vegetables.each do |vegetable| %>
          <li>
            <%= link_to vegetable.name, vegetable_path(vegetable) %>
          </li>
        <% end %>
      </ul>
    </div>
  </aside>

  <!-- ✅ 右：今までの投稿表示 -->
  <section class="main-content">
    <div class="post-header">
      <h1>
        <% case params[:filter] %>
        <% when "failure" %>
          📝 つまずきノート一覧
        <% when "mine" %>
          👤マイページ
        <% else %>
          📸育成記録一覧
        <% end %>
      </h1>

      <div class="filter-tabs">
        <%= link_to "つまずきノート", posts_path(filter: "failure"), class: "filter-button #{'active' if params[:filter] == 'failure'}" %> 
        <% if user_signed_in? %>
          <%= link_to "マイページ", posts_path(filter: "mine"), class: "filter-button #{'active' if params[:filter] == 'mine'}" %>
        <% end %>
      </div>

      <%= form_with url: posts_path, method: :get, local: true do %>
        <%= label_tag :tag, 'タグで検索' %>
        <%= text_field_tag :tag, params[:tag] %>
        <%= hidden_field_tag :filter, params[:filter] %>
        <%= submit_tag '検索' %>
      <% end %>
    </div>

    <section class="main-content">
  <div class="container mt-4">
    <% if @posts.any? %>
      <div class="row <%= @posts.size == 1 ? 'justify-content-center' : 'justify-content-start' %>">
        <% @posts.each do |post| %>
          <div class="col-12 col-sm-6 col-md-4 mb-4">
            <div class="card h-100">
              <% if post.image.attached? %>
                <%= image_tag url_for(post.image), class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-subtitle text-muted mb-2">
                  <%= post.user.nickname %> | <%= post.vegetable.name %>
                </p>

                <% if params[:filter] == "mine" %>
                  <span class="badge bg-secondary">育成記録</span>
                <% end %>

                <%= link_to '詳細を見る', post_path(post), class: "btn btn-outline-success mt-3 w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
    <% else %>
      <p>該当する投稿はありません。</p>
    <% end %>
  </section>
</div>
